      <Button fx:id="btnGetOtp" layoutX="275.0" layoutY="147.0" mnemonicParsing="false" onAction="#actionGetOtp" prefHeight="26.0" prefWidth="100.0" style="-fx-background-color: #0077b6;" text="Get OTP" textFill="WHITE">
         <font>
            <Font name="System Bold" size="11.0" />
         </font>
      </Button>
      <TextField fx:id="txtOtp1" layoutX="24.0" layoutY="199.0" prefHeight="30.0" prefWidth="30.0">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </TextField>
      <Label layoutX="31.0" layoutY="265.0" text="Password">
         <font>
            <Font name="Arial Narrow" size="14.0" />
         </font>
      </Label>
      <Label layoutX="108.0" layoutY="399.0" text="Already registered?" />
      <Label fx:id="lblResend" layoutX="203.0" layoutY="239.0" onMouseClicked="#clickedResend" text="Resend OTP" textFill="#0077b6" />
      <CheckBox fx:id="checkLogged" layoutX="24.0" layoutY="333.0" mnemonicParsing="false" text="Keep me logged in" />
      <TextField fx:id="txtOtp2" layoutX="64.0" layoutY="199.0" prefHeight="30.0" prefWidth="30.0">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </TextField>
      <TextField fx:id="txtOtp3" layoutX="104.0" layoutY="199.0" prefHeight="30.0" prefWidth="30.0">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </TextField>
      <TextField fx:id="txtOtp4" layoutX="144.0" layoutY="199.0" onKeyReleased="#validateOtp" prefHeight="30.0" prefWidth="30.0">
         <font>
            <Font name="System Italic" size="12.0" />
