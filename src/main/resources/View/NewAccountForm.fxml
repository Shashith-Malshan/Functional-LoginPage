<AnchorPane prefHeight="500.0" prefWidth="400.0" style="-fx-background-color: #ffff;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Control.NewAccountFormController">
    <children>
        <Pane prefHeight="51.0" prefWidth="400.0" style="-fx-background-color: #003049;">
            <children>
                <Label layoutX="174.0" layoutY="16.0" text="Sign Up" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
            </children>
        </Pane>
        <TextField fx:id="txtEmail" layoutX="25.0" layoutY="106.0" prefHeight="30.0" prefWidth="350.0" />
        <Label fx:id="lblEmail" layoutX="28.0" layoutY="79.0" text=" Email address">
            <font>
                <Font name="Arial Narrow" size="14.0" />
            </font>
        </Label>
        <Label layoutX="31.0" layoutY="172.0" text="OTP verification">
            <font>
                <Font name="Arial Narrow" size="14.0" />
            </font>
        </Label>
        <PasswordField fx:id="txtPassword" layoutX="24.0" layoutY="292.0" prefHeight="30.0" prefWidth="350.0" />
        <Button fx:id="btnCreate" layoutX="24.0" layoutY="362.0" mnemonicParsing="false" onAction="#actionCreate" prefHeight="26.0" prefWidth="350.0" style="-fx-background-color: #0077b6;" text="Create Account" textFill="WHITE">
            <font>
                <Font name="System Bold" size="11.0" />
            </font>
        </Button>
        <Label layoutX="96.0" layoutY="239.0" text="Didn't receive OTP?" />
